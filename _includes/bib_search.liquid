        transition: all 0.2s ease;
      "
      onmouseover="this.style.backgroundColor='rgba(var(--global-theme-color-rgb), 0.2)'"
      onmouseout="this.style.backgroundColor='rgba(var(--global-theme-color-rgb), 0.1)'">Zhu</button>
    </div>
  </div>

  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('bibsearch');
    const clearButton = document.getElementById('clear-search');
    const suggestionTags = document.querySelectorAll('.suggestion-tag');

    // Show/hide clear button based on input content
    if (searchInput) {
      function toggleClearButton() {
        if (searchInput.value.trim().length > 0) {
          clearButton.style.display = 'block';
        } else {
          clearButton.style.display = 'none';
        }
      }

      searchInput.addEventListener('input', toggleClearButton);
      searchInput.addEventListener('change', toggleClearButton);
      
      // Clear search functionality
      clearButton.addEventListener('click', function() {
        searchInput.value = '';
        searchInput.dispatchEvent(new Event('input'));
        searchInput.focus();
        clearButton.style.display = 'none';
      });

      // Suggestion tag functionality
      suggestionTags.forEach(tag => {
        tag.addEventListener('click', function() {
          const searchTerm = this.getAttribute('data-search');
          searchInput.value = searchTerm;
          searchInput.dispatchEvent(new Event('input'));
          searchInput.focus();
        });
      });

      // Initial check for clear button
      toggleClearButton();
    }
  });
  </script>

  <style>
  /* Enhanced search styling */
  .search-container .bibsearch-form-input:focus {
    outline: none;
  }
  
  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .search-container .bibsearch-form-input {
      background-color: var(--global-card-bg-color, #1a1a1a) !important;
      color: var(--global-text-color, #ffffff) !important;
    }
  }
  
  html[data-theme="dark"] .search-container .bibsearch-form-input {
    background-color: var(--global-card-bg-color, #1a1a1a) !important;
    color: var(--global-text-color, #ffffff) !important;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .search-suggestions {
      justify-content: center;
    }
    
    .search-suggestions .suggestion-tag {
      font-size: 0.75rem !important;
      padding: 1px 6px !important;
    }
  }
  </style>
