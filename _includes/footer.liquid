{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      <div class="text-center">
        &copy; Copyright {{ site.time | date: '%Y' }}
        {{ site.first_name }}
        {{ site.middle_name }}
        {{ site.last_name }}. All rights reserved.
        {% if site.last_updated %}
          <br>
          <small class="text-muted">Last updated: {{ site.time | date: '%B %d, %Y' }}</small>
        {% endif %}
        <br>
        <small class="text-muted">
          Powered by <a href="https://jekyllrb.com/" target="_blank">Jekyll</a> with <a href="https://github.com/alshedivat/al-folio" target="_blank">al-folio</a> theme.
          Hosted by <a href="https://pages.github.com/" target="_blank">GitHub Pages</a>.
        </small>
      </div>
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include scripts/newsletter.liquid %}
    {% endif %}

    <div class="container">
      <div class="text-center">
        &copy; Copyright {{ site.time | date: '%Y' }}
        {{ site.first_name }}
        {{ site.middle_name }}
        {{ site.last_name }}. All rights reserved.
        {% if site.last_updated %}
          <br>
          <small class="text-muted">Last updated: {{ site.time | date: '%B %d, %Y' }}</small>
        {% endif %}
        <br>
        <small class="text-muted">
          Powered by <a href="https://jekyllrb.com/" target="_blank">Jekyll</a> with <a href="https://github.com/alshedivat/al-folio" target="_blank">al-folio</a> theme.
          Hosted by <a href="https://pages.github.com/" target="_blank">GitHub Pages</a>.
        </small>
      </div>
    </div>
  </footer>
{% endif %}
